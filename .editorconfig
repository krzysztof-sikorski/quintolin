root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[*.php]
# settings required by PSR-12 standard
indent_size = 4
max_line_length = 120

[/website/bin/console]
indent_size = 4
max_line_length = 120

[/website/config/*.yaml]
indent_size = 4
max_line_length = 120

[/website/config/routes/*.yaml]
indent_size = 4
max_line_length = 120

[/website/config/packages/*.yaml]
indent_size = 4
max_line_length = 120
